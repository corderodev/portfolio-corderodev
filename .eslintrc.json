{
	"extends": [
		"plugin:astro/recommended"
	],
	"overrides": [
		{
			"files": [
				"*.astro"
			],
			"parser": "astro-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser",
				"extraFileExtensions": [
					".astro"
				]
			},
			"rules": {
				"quotes": ["error", "single"],
				"semi": ["error", "never"]
			}
		}
	]
}