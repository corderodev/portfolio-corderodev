---
import { DownArrowIcon } from '@icons/DownArrow.tsx'

interface Props {
  name: string;
  position: string;
  date: string;
  summary: string[];
}

const { name, position, date, summary } = Astro.props;
---

<details class="open">
  <summary
    class="pb-4 flex flex-wrap justify-between items-center cursor-pointer border-b border-zinc-600"
  >
    <div class="w-full flex flex-wrap gap-4 justify-between items-end">
      <h3 class="text-lg text-balance font-semibold capitalize">
        {name}, {position}
      </h3>
      <div class="flex flex-wrap items-center gap-4">
        <time class="text-sm">{date}</time>
        <DownArrowIcon class="size-5" />
      </div>
    </div>
  </summary>
  <ul class="mt-3 list-disc pl-4">
    {summary.map((item: string) => <li class="text-sm mb-2">{item}</li>)}
  </ul>
</details>
