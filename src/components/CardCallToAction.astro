---
import { RightArrowIcon } from '@icons/RightArrow.tsx'
import { basics } from '@cv'
---

<div
      class="flex flex-col items-center gap-4 rounded-lg bg-blue-200 text-zinc-900 p-6 sm:flex-row sm:justify-between shadow-sm"
    >
      <strong class="text-xl text-balance text-center sm:text-start">Si necesitas contactarme ¡Envíame un Mail!</strong>

      <a
        href={`mailto:${basics.email}`}
        class="inline-flex items-center gap-2 rounded-full border border-zinc-800 bg-zinc-800 px-8 py-3 text-blue-300 hover:bg-transparent hover:text-zinc-900 focus:outline-none focus:ring active:bg-white/90 duration-200"
      >
        <span class="text-sm font-medium">Enviar mail</span>
        <RightArrowIcon className="size-5" />
      </a>
    </div>